$(document).ready(function($) {	
	$('.ico-menu').click(function(e){            
        $('.m-nav').stop().slideToggle(400);
        e.stopPropagation();
    });
});


$(document).ready(function($) {
    $(".TAB li").click(function(){
      var tab=$(this).parent(".TAB");
      var con=tab.attr("id");
      var on=tab.find("li").index(this);
      $(this).addClass('on').siblings(tab.find("li")).removeClass('on');
      $(con).eq(on).show().siblings(con).hide();
    });
});

$(window).load(function(){
    var days = ['周日', '周一', '周二', '周三', '周四', '周五', '周六'];
    var months = ['一月', '二月', '三月', '四月', '五月','六月', '七月', '八月', '九月', '十月', '十一月', '十二月']
    $('.date-pop').Zebra_DatePicker({
        months: months,
        days: days,
        direction: true,
        show_icon: false,
        show_clear_date: false,
        show_select_today: false,
        offset: [-185,275]
    });
});

// 自定义多选
$(document).ready(function() {
    $('[role=checkbox]').each(function(){
        var input = $(this).find('input[type="checkbox"]');

            input.each(function(){
                if( $(this).attr('checked')){
                    $(this).parents('label').addClass('checked');
                    $(this).prop("checked", true)
                }
            })

            input.change(function(){
                $(this).parents('label').toggleClass('checked');
            });
    })

    // 自定义单选
    $('.radioBox label').click(function(){
        $(this).parents(".radioBox").find("label").removeClass("checked");
        $(this).addClass("checked");
    })

    jQuery(".focusBox").slide({ mainCell:".pic",effect:"left", autoPlay:false, delayTime:300});

    /*详情展开*/
    $('.open').click(function(e){
        if($(this).hasClass("open-show")){
            $(this).parents("tr").next('.hide-tr').hide();
            $(this).text('详情》').removeClass("open-show");;
            $(this).parents("tr").removeClass("tr-gray");
        }else{
            $(this).parents("tr").next('.hide-tr').show();
            $(this).text('收起》').addClass("open-show");
            $(this).parents("tr").addClass("tr-gray");
        }            
        e.stopPropagation();
    });

    

    
    // 右侧浮动菜单
    $('.sj-btn').click(function(e){            
        $('.default-outer').stop().show();
        $('.floor-sj').stop().hide();
        e.stopPropagation();
    });
    

    $('.floor-btn').click(function(e){                   
        $('.default-outer').stop().hide();
        $('.floor-sj').stop().show();
        e.stopPropagation();
    });
    
    var lastId,
    topMenu = $(".default-outer"),
    topMenuHeight = topMenu.outerHeight()+0,
    menuItems = topMenu.find(".floor a"),
    scrollItems = menuItems.map(function(){
        var item = $($(this).attr("href"));
        if (item.length) { return item; }
    });
    function highlightNav() {
        var fromTop = $(window).scrollTop()+topMenuHeight;
        var cur = scrollItems.map(function(){ if ($(this).offset().top < fromTop) { return this; } });
        cur = cur[cur.length-1];
        var id = cur && cur.length ? cur[0].id : "";
        if (lastId !== id) {
            lastId = id;
            menuItems.removeClass("on").filter("[href=#"+id+"]").addClass("on");
        }
    }
    highlightNav();
    $(window).scroll(function(){
        highlightNav();
    });
    $('.default-outer .floor a').click(function(){
        $('html, body').animate({
            scrollTop: $( $.attr(this, 'href') ).offset().top
        }, 500);
        return false;
    });
    $('.goTop a').click(function(){ 
       $('html, body').animate({scrollTop:0}, 'slow'); 
    });
    $('.default-outer li a').click(function(){
        $('html, body').animate({
            scrollTop: $( $.attr(this, 'href') ).offset().top
        }, 500);
        return false;
    });
   
});