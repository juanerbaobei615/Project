/*3民宿预订-2预订成功*/
.mht-succ{margin-bottom: 45px;}
.mht-succ .tit{text-align:right;max-width:450px;margin: 0 auto;padding-top: 36px;}

.mht-succ .tit h3{font-size: 30px;color: #b9875f;background: url(../images/succ-i1.png) no-repeat left center;}
.mht-succ .txt h4{font-size: 24px;color: #b9875f;border-bottom: 1px solid #dcdcdc;padding-left:5px;padding-bottom: 8px;
    margin-bottom:13px; margin-top:22px;
}
.mht-succ .txt p{font-size: 18px;color: #555;}
.mht-succ .txt p span{color: #9a9a9a;line-height:40px;}
.mht-succ .txt p a{display: inline-block;font-size: 24px;color: #fff;background-color: #b9875f;padding:7px 135px;
    margin-top: 3px;margin-bottom: 7px;
}
.mht-succ .txt p span b{font-weight: normal;color: #b9875f;}
/*3民宿预订-2支付*/
.mht-pay{margin-top: 60px;}
.mht-pay .pay-rem{overflow: hidden;background-color: #f5f5f5;text-align: center;margin-bottom: 45px;}
.mht-pay .pay-rem p{font-size: 18px;color: #b9875f;line-height: 60px;}
.mht-pay .pay-rem p img{vertical-align: middle;}
.mht-pay .pay-cen{width: 480px;margin: 0 auto;}
.mht-pay .pay-cen p{font-size: 18px;color: #555;line-height:60px;}
.mht-pay .pay-cen p span{float: left;}
.mht-pay .pay-cen p em{display: inline-block;font-size: 30px;color: #b9875f;float: left;margin-left:8px;}
.mht-pay .pay-cen p .cz{float: right;background-color: #b9875f;font-size: 16px;color: #fff;padding: 0 20px;line-height:34px;
    margin-top: 13px;
}
.mht-pay .pay-cen p input{padding: 0 10px;margin: 0 5px;}
.mht-pay .pay-cen p .inp1{width: 300px;height: 40px;font-size: 18px;color: #555;}
.mht-pay .pay-cen p .inp2{width: 195px;height: 50px;font-size: 14px;color: #a9a9a9;}
.mht-pay .pay-cen p .yzm{background-color: #c2b0a3;color: #fff;font-size: 12px;padding:17px 25px;}
.mht-pay .pay-cen p .yzm:hover{background-color: #b9875f;}
.mht-pay .pay-cen p .zf{background-color: #b9875f;font-size: 24px;color: #fff;}


